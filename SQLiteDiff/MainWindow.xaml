<Window x:Class="SQLiteDiff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dgx="clr-namespace:DataGridExtensions;assembly=DataGridExtensions"
        xmlns:local="clr-namespace:SQLiteDiff"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
        <local:IndexToNumberConverter x:Key="IndexToNumberConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="Database 1 Path:" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="Database1PathTextBox" Grid.Row="0" Grid.Column="1" Margin="4,4,4,0" PreviewMouseDown="DatabasePathTextBox_PreviewMouseDown"/>
        <Label Content="Database 2 Path:" Grid.Row="1" Grid.Column="0"/>
        <TextBox x:Name="Database2PathTextBox" Grid.Row="1" Grid.Column="1" Margin="4,4,4,0" PreviewMouseDown="DatabasePathTextBox_PreviewMouseDown"/>
        <Button Content="Compare" Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Margin="4,4,4,0" Click="CompareButton_Click"/>
        <Label Content="Table:" Grid.Row="2" Grid.Column="0" />
        <ComboBox x:Name="TableComboBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,4,4,0" SelectionChanged="TableComboBox_SelectionChanged"/>
        <DataGrid x:Name="DataGrid1"  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="4,4,4,0"
                  IsReadOnly="True" SelectionUnit="Cell" ColumnWidth="*"
                  dgx:DataGridFilter.IsAutoFilterEnabled="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="False"
                  CanUserResizeRows="False"
                  AlternationCount="100000"
                  Loaded="DataGrid_Loaded"
                  LayoutUpdated="DataGrid_LayoutUpdated"
                  ColumnDisplayIndexChanged="DataGrid_ColumnDisplayIndexChanged"
                  SelectedCellsChanged="DataGrid_SelectedCellsChanged">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="{Binding Value.BackgroundColor}" />
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.RowHeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=AlternationIndex, Converter={StaticResource IndexToNumberConverter}}"/>
                </DataTemplate>
            </DataGrid.RowHeaderTemplate>
        </DataGrid>
        <DataGrid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="4,4,4,4"
                  x:Name="DataGrid2" IsReadOnly="True" SelectionUnit="Cell" ColumnWidth="*" 
                  dgx:DataGridFilter.IsAutoFilterEnabled="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  AlternationCount="100000"
                  Loaded="DataGrid_Loaded"
                  LayoutUpdated="DataGrid_LayoutUpdated"
                  ColumnDisplayIndexChanged="DataGrid_ColumnDisplayIndexChanged"
                  SelectedCellsChanged="DataGrid_SelectedCellsChanged">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="{Binding Value.BackgroundColor}" />
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.RowHeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=AlternationIndex, Converter={StaticResource IndexToNumberConverter}}"/>
                </DataTemplate>
            </DataGrid.RowHeaderTemplate>
        </DataGrid>
    </Grid>
</Window>
